<div id="page-title">
  <div id="page-title-inner">
    <div class="container">
      <h2><i class="ico-keynote"></i>Resources</h2>
    </div>
  </div>  
</div>

<div id="wrapper">
  <div class="container">

    <div id="filters">
      <ul class="option-set" data-option-key="filter">
        <li><a href="#filter" class="selected" data-option-value="*">All</a></li>
        <li>/</li>
        <li><a href="#filter" data-option-value=".info">Information</a></li>
        <li>/</li>
        <li><a href="#filter" data-option-value=".buymsc">Buy mastercoin</a></li>
        <li>/</li>
        <li><a href="#filter" data-option-value=".translookup">Transaction lookup</a></li>
        <li>/</li>
        <li><a href="#filter" data-option-value=".wallet">Wallet</a></li>
      </ul>
    </div>
    <hr>

    <% if !@resources.empty? %>
    
      <div class="container">

        <div id="portfolio-wrapper" class="row isotope" style="position: relative; overflow: hidden;">  

          <% @resources.each do |resource| %> 
            <div class="span3 portfolio-item <%= resource.category %> isotope-item" >
              <div class="picture">
                <div class="item-description alt">
                  <h2><%= link_to truncate(resource.title, length: 20), resource_path(resource) %></h2><hr>
                </div>
                <%= image_tag resource.image.url(:medium), title: "Title" %>
                  <div class="image-overlay-link" style="opacity: 0; display: block;">
                  </div>

                <div id="resource_description">
                  <p>
                    <hr><%= truncate(resource.description, length: 115) %>
                  </p>
                </div>
              </div>  
            </div>
          <% end %>
        </div>
      <% if current_user && current_user.kind == "Admin" %>
        <%= button_to 'Create new resource', new_resource_path, id: "comment_button", method: :get  %>
      <% end %>
      </div>

    <% else %>
      <p>Theres no resources created just yet. </p>


      <% if current_user && current_user.kind == "Admin" %>
        <%= button_to 'Create new resource', new_resource_path, id: "comment_button", method: :get %>
      <% end %>
      
    <% end %>

    <hr>
  </div>
</div>
		<div class="row">
			<div class="span9">

				<div class="post post-page">
						
					<div class="post-img picture">
						<%= image_tag @blog.image.url %>
					</div>
					<div class="post-content">
						<div class="post-title">
							<h2><%= @blog.title %></h2>
						</div>
						<div class="post-description">
							<p><%= raw markdown.render(@blog.body) %></p>
						</div>
						<div class="post-meta">
							<span><i class="mini-ico-calendar"></i><%= @blog.created_at.to_s(:short) %></span>
							<span><i class="mini-ico-user"></i>By <%= link_to @blog.user.name, user_path(@blog.user) %></span>
							<span><div class="fb-share-button" data-href="http://developers.facebook.com/docs/plugins/" data-type="button"></div></span>
							<% if current_user && current_user.kind == "Admin" %>
                <span><i class="mini-ico-user"></i><%= link_to 'Edit', edit_blog_path(@blog) %></span>
              <% end %>
						</div>
					</div>
				
				</div>
				<!-- end: Post -->
				
				<hr>
				

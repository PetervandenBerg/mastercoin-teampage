<header>
	<div class="container">
		<div class="navbar navbar-inverse">
  		<div class="navbar-inner">
    		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      		<span class="icon-bar"></span>
      		<span class="icon-bar"></span>
      		<span class="icon-bar"></span>
    		</a>
        <%= link_to image_tag('mastercoin_logo.png'), '/', class: "brand", method: :get %>
    		<div class="nav-collapse collapse">
      		<ul class="nav">
            <li><%= link_to "News", newsitems_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Information<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Features", pages_features_path %></li>
                <li><%= link_to "Resources", resources_path, method: :get %></li>
                <li><%= link_to "Contact", contact_path %></li>
                <li><a href="http://wiki.mastercoin.org/index.php/Main_Page">Wiki</a></li>
                <li><a href="https://trello.com/b/uRutPlms/exchange-project">Trello</a></li>
              </ul>
            </li>
            <li><%= link_to "The team", pages_teampage_path %></li>
            <li><%= link_to "Blog", blogs_path %></li>
            <li><%= link_to "BudgetPage", '#' %></li>
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> 
                  <% if current_user.notifications.where(read: false).present? %>
                    <span class="badge"><%= current_user.notifications.where(read: false).count %></span>
                  <% end %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "All users", users_path %></li>
                  <li><%= link_to "My profile", user_path(current_user) %></li>
                  <li><%= link_to "Send notification", new_message_path %></li>
                  <li><%= link_to "Edit Profile Settings", edit_user_registration_path %></li>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Users<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Log-in', new_user_session_path %></li>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
              </ul>
            </li>
            <% end %>
      		</ul>
      	</div>
      </div>
		</div>											
	</div>
</header>